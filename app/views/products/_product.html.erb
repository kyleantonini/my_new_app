<div class="col-sm-3 col-md-3">
    <% cache product do %>
        <p><%= image_tag(product.image_url, class: "img-responsive") %></p>
        <h3><%= product.name %></h3>
        <p><%= product.description %></p>
        <p><%= product.colour %></p>
        <p><price><%= number_to_currency(product.price) %></price></p>
        <p><%= link_to 'Show', product %></p>
        <% if signed_in? && current_user.admin? %>
          <p><%= link_to 'Edit', edit_product_path(product) %></p>
          <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <% end %>
    <% end %> <!-- cache -->
</div> <!-- /col -->